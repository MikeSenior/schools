<html>
<head>
  <meta charset="utf-8">
  <meta name="description" content="Compare local A-level schools">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <title>Find and compare A-level schools</title>

  <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700,900">
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/narrow.css">
  <link rel="stylesheet" href="/css/colors.css">
</head>

<body>

  <header>
    <div class="inner">
      <h1>Find and compare A-level schools</h1>
    </div>
  </header>

  <div class="inner">
    <section class="subjects-filter">
      <h2>
        Subjects
        <span class="help tooltip">
          ?<p class="message wider">Number in (brackets): number of schools displayed on the list that do the subject.</p>
        </span>
        <form>
          <input class="search-subjects" type="search" placeholder="Find a subject">
        </form>
      </h2>
      <div class="subjects"></div>
    </section>

    <section class="main">
      <form class="search-form" method="get" action="/">
        <button type="submit" class="find-schools">Find schools</button>
        <div class="wrapper">
          <input type="search" class="search-input" name="q" placeholder="School name or full postcode" autofocus="true">
          <button class="use-location">Use my location</button>
        </div>
      </form>

      <section class="type-filter">
        <h2>Show schools that are:</h2>
        <label><input type="checkbox" class="filter" data-filter="independent" checked> Independent</label>
        <label><input type="checkbox" class="filter" data-filter="state-funded" checked> State-funded</label>
        <label><input type="checkbox" class="filter" data-filter="single-sex" checked> Single-sex</label>
        <label><input type="checkbox" class="filter" data-filter="special" checked>
          Special
          <span class="help tooltip">
            ?<p class="message wider">Schools for students with special needs.</p>
          </span>
        </label>
        <label class="no-data"><input type="checkbox" class="filter" data-filter="no-data" checked> Schools without data</label>
      </section>

      <section class="schools">
        <table>
          <thead>
            <tr>
              <th rowspan=2 style="width: 20%" class="first sortable" data-sort="name" data-order="asc">School name</th>
              <th rowspan=2 style="width: 27%" class="sortable" data-sort="performance">Subject performance</th>
              <th colspan=2 class="heading">Number of students</th>
              <th colspan=2 class="heading">Average point scores</th>
              <th rowspan=2 class="sortable" data-sort="supertype" data-order="asc">Type</th>
              <th rowspan=2 class="as-distance sortable" data-sort="distance" data-order="asc">Distance <small>in miles</small></th>
              <th rowspan=2>Compare</th>
            </tr>
            <tr>
              <th style="width: 6.25%" class="sub-heading sortable" data-sort="total-a2">A2</th>
              <th style="width: 6.25%" class="sub-heading sortable" data-sort="total-1618">16-18</th>
              <th style="width: 12%" class="sub-heading sortable" data-sort="aps-student">Student</th>
              <th style="width: 12%" class="sub-heading sortable" data-sort="aps-entry">Entry</th>
            </tr>
          </thead>
          <tbody class="guide">
            <tr>
              <td class="g-name">A guide for reading the table</td>
              <td class="g-performance">
                <h3>Number of people who achieved&hellip;</h3>
                <div class="subject">
                  <div class="a-c-label">A*-C</div>
                  <div class="a-a-label">A*-A</div>
                  <div class="no-result-label">U/No result</div>
                </div>
              </td>
              <td colspan=2>Mouse over number for list of subjects</td>
              <td></td>
              <td></td>
              <td></td>
              <td class="as-distance"></td>
              <td></td>
            </tr>
          </tbody>
          <tbody class="compare"></tbody>
          <tbody class="results"></tbody>
        </table>
        <div class="based-on">Data from <a href="http://www.education.gov.uk/schools/performance/download_data.html">KS5 Performance Tables 2013</a>.</div>
      </section>

    </section>


    <footer class="clearfix">
      <p class="left">Built for students, by a <a href="http://gavrilov.co.uk">student</a>.</p>
      <p class="right"><a href="#">Learn more about this project</a></p>
    </footer>
  </div>

  <script type="text/javascript">

    // constants
    var YEAR = "<%= YEAR %>";

    // namespacing
    var app = window.app = app || {};
    app.get = {};
    app.models = {};
    app.views = {};
    app.collections = {};
    app.constructors = {};
    app.utils = {};
    app.helpers = {};
    app.templates = {};
    app.preload = {};

    // preload
    <% if (preload.colornames) { %>app.preload.colornames = <%- preload.colornames %>; <% } %>
    <% if (preload.subjectnames) { %>app.preload.subjectnames = <%- preload.subjectnames %>; <% } %>
    <% if (preload.schoolnames) { %>app.preload.schoolnames = <%- preload.schoolnames %>; <% } %>

  </script>

  <!-- build:js public/app.js -->

  <script src="/js/vendor/jquery.js" type="text/javascript"></script>
  <script src="/js/vendor/jquery.stickytableheaders.js" type="text/javascript"></script>
  <script src="/js/vendor/underscore.js" type="text/javascript"></script>
  <script src="/js/vendor/backbone.js" type="text/javascript"></script>
  <script src="/js/vendor/backbone.queryparams-1.1-shim.js" type="text/javascript"></script>
  <script src="/js/vendor/backbone.queryparams.js" type="text/javascript"></script>

  <script src="/js/templates.js" type="text/javascript"></script>

  <script src="/js/components/utils.js" type="text/javascript"></script>
  <script src="/js/components/helpers.js" type="text/javascript"></script>
  <script src="/js/components/get.js" type="text/javascript"></script>
  <script src="/js/components/colors.js" type="text/javascript"></script>
  <script src="/js/components/search.js" type="text/javascript"></script>
  <script src="/js/components/filters.js" type="text/javascript"></script>
  <script src="/js/components/sorting.js" type="text/javascript"></script>
  <script src="/js/components/subjects.js" type="text/javascript"></script>
  <script src="/js/components/schools.js" type="text/javascript"></script>
  <script src="/js/components/router.js" type="text/javascript"></script>

  <script src="/js/main.js" type="text/javascript"></script>

  <!-- endbuild -->

</body>
</html>