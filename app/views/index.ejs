<html>
<head>
  <meta charset="utf-8">
  <meta name="description" content="Find and compare A-level schools">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <title>Find and compare A-level schools</title>

  <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700,900">
  <link rel="stylesheet" href="/build/app.css">
</head>

<body>

  <header>
    <div class="inner">
      <h1>Find and compare A-level schools</h1>
      <form class="search-form" method="get" action="/">
        <button type="submit" class="find-schools">Find schools</button>
        <div class="wrapper">
          <input type="search" class="search-input" name="q" placeholder="Postcode or school name">
          <button class="use-location">Use my location</button>
        </div>
        <section class="type-filter">
          <h2>Show</h2>
          <label><input type="checkbox" class="filter" data-filter="independent" checked> Independent</label>
          <label><input type="checkbox" class="filter" data-filter="state-funded" checked> State-funded</label>
          <label><input type="checkbox" class="filter" data-filter="special" checked>
            Special
            <span class="help tooltip">
              ?<p class="message wide">Schools for students with special needs.</p>
            </span>
          </label>
          <label class="separated"><input type="checkbox" class="filter" data-filter="single-sex"> Exclude single-sex</label>
        </section>
      </form>
    </div>
  </header>

  <div class="inner">
    <section class="subjects-filter">
      <h2>
        Subjects
        <span class="help tooltip">
          ?<div class="message wider">
            <strong>Only popular subjects are shown.</strong>
            <hr>Number in <strong>(brackets)</strong>: number of schools displayed on the list that did the subject.
          </div>
        </span>
        <form>
          <input class="search-subjects" type="search" placeholder="Find a subject">
        </form>
      </h2>
      <div class="subjects"></div>
    </section>

    <section class="main">

      <section class="schools no-distance">
        <table>
          <thead>
            <tr>
              <th rowspan=2 style="width: 20%" class="first sortable" data-sort="name" data-order="asc">School name</th>
              <th rowspan=2 style="width: 30%" class="sortable" data-sort="performance">Subject performance</th>
              <th colspan=2 class="heading">Number of students</th>
              <th colspan=2 class="heading">Average point scores</th>
              <th rowspan=2 class="sortable" data-sort="supertype" data-order="asc">Type</th>
              <th rowspan=2 class="as-distance sortable" data-sort="distance" data-order="asc">Distance <small>in miles</small></th>
              <th rowspan=2>Compare</th>
            </tr>
            <tr>
              <th style="width: 8%" class="sub-heading sortable" data-sort="total-a2">A2</th>
              <th style="width: 8%" class="sub-heading sortable" data-sort="total-1618">16-18</th>
              <th style="width: 9%" class="sub-heading sortable" data-sort="aps-student">Student</th>
              <th style="width: 9%" class="sub-heading sortable" data-sort="aps-entry">Entry</th>
            </tr>
          </thead>
          <tbody class="guide">
            <tr>
              <td class="g-name">
                <h3>How to read<br>the table</h3>
              </td>
              <td class="g-performance">
                <span>Number of students who achieved&hellip;</span>
                <div class="subject">
                  <div class="a-c-label">A*-C</div>
                  <div class="a-a-label">A*-A</div>
                  <div class="no-result-label">U/No result</div>
                </div>
                Results are suppressed (not published) for subjects with less than 6 entries.
              </td>
              <td colspan=2>Mouse over number for list of subjects</td>
              <td colspan=2>Point scores are calculated using...</td>
              <td></td>
              <td class="as-distance"></td>
              <td></td>
            </tr>
          </tbody>
          <tbody class="compare"></tbody>
          <tbody class="results"></tbody>
        </table>
        <div class="based-on">Data from <a href="http://www.education.gov.uk/schools/performance/download_data.html">KS5 Performance Tables 2013</a>.</div>
      </section>

    </section>


    <footer class="clearfix">
      <p class="left">Made for students, by a <a href="http://gavrilov.co.uk">student</a>.</p>
      <p class="right"><a href="#">Learn more about this project</a></p>
    </footer>
  </div>

  <script type="text/javascript">

    // constants
    var YEAR = "<%= YEAR %>";

    // namespacing
    var app = window.app = app || {};
    app.get = {};
    app.models = {};
    app.views = {};
    app.routers = {};
    app.collections = {};
    app.constructors = {};
    app.utils = {};
    app.helpers = {};
    app.templates = {};
    app.preload = {};

    // preload
    <% if (preload.colornames)   { %>app.preload.colornames   = <%- preload.colornames %>; <% } %>
    <% if (preload.subjectnames) { %>app.preload.subjectnames = <%- preload.subjectnames %>; <% } %>
    <% if (preload.schoolnames)  { %>app.preload.schoolnames  = <%- preload.schoolnames %>; <% } %>

  </script>

  <script src="/build/app.js" type="text/javascript"></script>

</body>
</html>